<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Login</title>
    <link rel="stylesheet" type="text/css" href="/assets/styles/adminLogin.css" />
  </head>
  <body>
    <div class='container'>
      <img class="logo" src='assets/vectors/isro_logo.svg'/>
      <div class="content">
        <div class="back-button" id="back-btn">
          <img class="left-arrow" src="assets/vectors/left_arrow.svg"/>
          <span class="back-text">Back</span>
        </div>
        <div class="input-container">
          <span class="normal-text">Sign in</span>
          <input type="text" id="username" name="username" placeholder="USERNAME" class="input-box"/>
          <input type="password" id="password" name="password" placeholder="PASSWORD" class="input-box"/>
        </div>
        <div class="signin-button" id="signin-btn">
          <span class="signin-text">Sign in</span>
        </div>
      </div>
    </div>
    <script>
      var backBtn = document.getElementById("back-btn")
      backBtn.addEventListener('click', function() {
        window.location.assign('/')
      })

      var signinBtn = document.getElementById("signin-btn")
      signinBtn.addEventListener('click', function() {
        window.location.assign('/admin')
      })
    </script>
  </body>
</html>
